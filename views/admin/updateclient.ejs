      <input type="text" class="form-control" name="phone" value="<%= users.phone %>" required />
	  <div class="user-name">Select Fitness Trainer for the Client</div>
	  
	  <select class="form-control" name="trainerid">
		 <%
         var selected = "";
        for (var i=0;i < trainers.length;i++){
		  if (trainers[i]._user != null) {
            if (trainers[i]._user._id.toString() == trainerselectedid.toString()) {
                selected = "selected";
            }else{
                selected = "";
            }
       %>
		 <option value="<%= trainers[i]._user._id %>" <%= selected %>><%= trainers[i].fname + " " + trainers[i].lname %></option>
		 
		 <% }
	  }
		 %>
	  </select>
	  <button type="submit" class="submit-btn">Submit</button>
	  <button type="button" class="cancel-btn">Cancel</button>
 
</form>
