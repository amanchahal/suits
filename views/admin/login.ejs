<script type="text/javascript" src="/javascripts/jquery.validate.min.js"></script>
<script type="text/javascript" >
   jQuery(document).ready(function(){
      jQuery("#login-form").validate();
   });
</script>
<div class="banner">
   <div class="container">
   <div class="col-md-4 col-xs-12 col-sm-12 col-md-offset-4">
   <div class="search-box">
   <div class="col-md-12 col-sm-12 col-xs-12">
   <div class="member-login">
   <h5>
    ADMIN LOGIN</h5>
    </div>
    
    <div class="col-sm-12 col-sm-offset-1">
      
    <form class="form-horizontal" role="form" id="login-form" action="/admin/login" method="post">
  <div class="form-group">
      <%
         if (typeof flash != 'undefined') {
            %>
            <div role="alert" class="alert alert-danger alert-dismissible fade in">
               <button aria-label="Close" data-dismiss="alert" class="close" type="button">
                  <span aria-hidden="true">x</span>
               </button>
               <%= flash %>   
            </div>
            <%
            
         }
      %>
    <div class="col-sm-10 col-md-10">
    <div class="emailbox">
      <input type="text" class="form-control" name="username"  placeholder="Username" required></div>
    </div>
  </div>
  <div class="form-group">
   
    <div class="col-sm-10 col-md-10">
      <input type="password" class="form-control" name="password"  placeholder="Password" required>
    </div>
    
  </div>
  
  
  
  <div class="form-group">
    <div class="col-sm-10 col-xs-12 col-md-10">
      <button type="submit" class="btn btn-primary btn-block">SIGN IN</button></div>
      
  </div>
</form>
</div>
</div>
</div>
   </div>
   </div>
   </div>
   